{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },

  "DataIdp": {
    "DefaultConnection": {
      // Use a shared (and running) LocalDB database when executing in IIS e.g.
      // "Server=(localdb)\\.\\IIS_DB;Database=MusicStore;Trusted_Connection=False;MultipleActiveResultSets=true;User ID=iis_login;Password=********"
      "ConnectionString": "Server=(localdb)\\MSSQLLocalDB;Database=IdpDb;Trusted_Connection=True;MultipleActiveResultSets=true;Connect Timeout=30;"
    }
  },
  "DataIdpUser": {
    "DefaultConnection": {
      // Use a shared (and running) LocalDB database when executing in IIS e.g.
      // "Server=(localdb)\\.\\IIS_DB;Database=MusicStore;Trusted_Connection=False;MultipleActiveResultSets=true;User ID=iis_login;Password=********"
      "ConnectionString": "Server=(localdb)\\MSSQLLocalDB;Database=IdpDb;Trusted_Connection=True;MultipleActiveResultSets=true;Connect Timeout=30;"
    }
  },


  "ConnectionStrings": {
    "IdentityDbConnectionString": "server=(localdb)\\MSSQLLocalDB;database=IdpDb;Trusted_Connection=true",
    "IdentityUserDbConnectionString": "server=(localdb)\\MSSQLLocalDB;database=IdpDb;Trusted_Connection=true"
  },
  "AllowedHosts": "*"
}
